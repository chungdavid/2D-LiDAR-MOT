<launch>
  <node name="straight_path_rosbag" pkg="rosbag" type="play" args="--clock /home/ros/data/straight_path_2023_05_17.bag"/>
  
  <!-- C++ Nodes -->
  <node name="$(anon lidar_preprocessing_node)" pkg="lidar_object_tracking" type="lidar_preprocessing_node" output="screen"/>
  <node name="$(anon lidar_object_detection_node)" pkg="lidar_object_tracking" type="lidar_object_detection_node" output="screen"/>
  <!-- <node name="$(anon lidar_object_tracking_node)" pkg="lidar_object_tracking" type="lidar_object_tracking_node" output="screen"/> -->

  <!-- static transformations -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_base_link" args="0 0 0 0 0 0 map base_link" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_hokuyo" args="-0.114 0 0.0674 0 0 0 base_link hokuyo" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_zed_left" args="-0.135 0.053 0.122 0 0 0 base_link zed_left" />

  <!-- temp -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_laser" args="0 0 0.5 0 0 0 map laser" />
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_zed_left" args="0 0 0.5 0 0 0 map zed2_left_camera_frame" /> -->
</launch>