<launch>
  <node name="straight_path_rosbag" pkg="rosbag" type="play" args="--clock /home/ros/data/straight_path_2023_05_17.bag"/>
  <node name="lidar_preprocessing" pkg="perception" type="lidar_preprocessing.py" output="screen"/>
  <node name="camera_preprocessing" pkg="perception" type="camera_preprocessing.py" output="screen"/>

  <!-- static transformations -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_base" args="0 0 0 0 0 0 map base_link" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="link_to_laser" args="0 0 5 0 0 0 base_link base_laser" />

</launch>